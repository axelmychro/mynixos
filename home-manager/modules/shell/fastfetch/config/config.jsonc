{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/nix.txt",
    "padding": {
      "top": 0,
      "left": 0,
      "right": 2
    }
  },
  "display": {
    "separator": "",
    "key": {
      "width": 8,
      "type": "string"
    },
    "color": { "keys": "#a5adce" },
    "percent": {
      "color": {
        "green": "#8CAAEE",
        "yellow": "#dada00",
        "red": "#F4B8E4"
      }
    }
  },
  "modules": [
    {
      "type": "title",
      "format": "[{1}@{2}]"
    },
    {
      "type": "kernel",
      "key": "kernel",
      "format": "{release} {arch}"
    },
    {
      "type": "os",
      "key": "os",
      "format": "{name} {version}"
    },
    {
      "type": "wm",
      "key": "wm",
      "format": "{pretty-name} on {protocol-name}"
    },
    {
      "type": "terminal",
      "key": "term",
      "format": "{process-name} {version}"
    },
    { "type": "shell", "key": "shell", "format": "{process-name} {version}" },
    {
      "type": "display",
      "key": "screen",
      "format": "{width}Ã—{height} {refresh-rate}Hz"
    },
    {
      "type": "cpu",
      "key": "cpu",
      "format": "{name}"
    },
    {
      "type": "gpu",
      "key": "card",
      "hideType": "integrated",
      "format": "{name}"
    },
    {
      "type": "memory",
      "key": "memory",
      "format": "{percentage} {used}/{total}"
    },
    {
      "type": "disk",
      "key": "stored",
      "format": "{size-percentage} {size-used}/{size-total}"
    },
    {
      "type": "battery",
      "key": "power",
      "format": "{capacity} {status}"
    }
  ]
}
